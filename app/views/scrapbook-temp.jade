extends scrapbook-layout

block content
    // Header
    
    
    
    // Timeline - How it Works
    section#main
      .container
        
        .row
          .col-lg-12.text-center
            h2.section-heading {PETS NAME}
            h3.section-subheading.text-muted {ORIGIN} - {DESTINATION} - {DATE}
        .row
          .col-lg-12
            ul.timeline
              li
                .timeline-image
                  img.img-circle.img-responsive(src={MSG_IMG}, alt='')
                .timeline-panel
                  .timeline-heading
                    h4 {MSG_NUM} {TIME_STAMP}
                    
                  .timeline-body
                    p.text-muted
                      | {MSG_TEXT} 
              li.timeline-inverted
                .timeline-image
                  img.img-circle.img-responsive(src={MSG_IMG}, alt='')
                .timeline-panel
                  .timeline-heading
                    h4 {MSG_NUM} {TIME_STAMP}
                    
                  .timeline-body
                    p.text-muted
                      | {MSG_TEXT}
              
              li.timeline-inverted
                .timeline-image
                  h4
                    | Book
                    br
                    | Your Next 
                    br
                    | Trip!

    
    // Contact Section
    section#contact
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Contact Us
            h3.section-subheading.text-muted Have other questions? Drop us a line!
        .row
          .col-lg-12
            form#contactForm(name='sentMessage', novalidate='')
              .row
                .col-md-6
                  .form-group
                    input#name.form-control(type='text', placeholder='Your Name *', required='', data-validation-required-message='Please enter your name.')
                    p.help-block.text-danger
                  .form-group
                    input#email.form-control(type='email', placeholder='Your Email *', required='', data-validation-required-message='Please enter your email address.')
                    p.help-block.text-danger
                  .form-group
                    input#phone.form-control(type='tel', placeholder='Your Phone *', required='', data-validation-required-message='Please enter your phone number.')
                    p.help-block.text-danger
                .col-md-6
                  .form-group
                    textarea#message.form-control(placeholder='Your Message *', required='', data-validation-required-message='Please enter a message.')
                    p.help-block.text-danger
                .clearfix
                .col-lg-12.text-center
                  #success
                  button.btn.btn-xl(type='submit') Send Message
    footer
      .container
        .row
          .col-md-4
            span.copyright Copyright Â© Yippee Air 2016
          .col-md-4
            ul.list-inline.social-buttons
              li
                a(href='#')
                  i.fa.fa-twitter
              li
                a(href='#')
                  i.fa.fa-facebook
              li
                a(href='#')
                  i.fa.fa-linkedin
          .col-md-4
            ul.list-inline.quicklinks
              li
                a(href='#') Privacy Policy
              li
                a(href='#') Terms of Use

    // Quote Modal
    #quoteModal.portfolio-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-content
        .close-modal(data-dismiss='modal')
          .lr
            .rl
        .container
          .row
            .col-lg-8.col-lg-offset-2
              .modal-body
                h2 Chat with a Courier
                h4
                    span Your Estimated Pet Travel Cost is 
                    span#estimate-range $850-1100
                .row
                    .col-md-4
                        p.estimate-details
                            span Flight: 
                            span#flight-cost $200-300
                        p.estimate-details
                            span Airline Pet Fee: 
                            span#pet-fee $150
                    .col-md-4
                        p.estimate-details Hotel: 
                            span#hotel-cost $100-150
                    .col-md-4
                        p.estimate-details
                            span Yippee Fee: 
                            span#yipee-fee $300
                        p.estimate-details
                            span Other Fee: 
                            span#other-fee $100
                form(role='form', action="/request-quote", method="post")
                    .row
                        .col-md-4
                            .form-group
                                input.form-control(type='text', name="pet_name", placeholder='Enter Pet Name')
                        .col-md-4
                            .form-group
                                input.form-control(type='text', name="pet_weight", placeholder='Enter Pet Weight')
                        .col-md-4
                            .form-group
                                input.form-control(type='text', name="pet_age", placeholder='Enter Pet Age')
                    .row
                        .col-md-12
                            .form-group
                                input.form-control(type='text', name="pet_notes", placeholder='Enter Pet Notes')
                    .row
                        .col-md-12
                            .form-group
                                input.form-control(type='text', name="trip_notes", placeholder='Enter Trip Notes')
                    .row
                        .col-md-6
                            .form-group
                                input.form-control(type='text', name="sender_name", placeholder='Enter Sender\'s Full Name')
                            .form-group
                                input.form-control(type='text', name="sender_email", placeholder='Enter Sender\'s Email')
                            .form-group
                                input.form-control(type='text', name="sender_phone", placeholder='Enter Sender\'s Phone Number')
                        .col-md-6
                            .form-group
                                input.form-control(type='text', name="receiver_name", placeholder='Enter Receiver\'s Full Name')
                            .form-group
                                input.form-control(type='text', name="receiver_email", placeholder='Enter Receiver\'s Email')
                            .form-group
                                input.form-control(type='text', name="receiver_phone", placeholder='Enter Receiver\'s Phone Number')
                    .row
                        .col-md-12
                            p
                                span#primary-contact-label Who is the primary contact for this trip? 
                                input(type='radio', name='main_contact', value='sender')
                                span#sender-label Sender 
                                input(type='radio', name='main_contact', value='receiver')
                                span#receiver-label Receiver
                        input#estimate-id(type='hidden', name='estimate_id', value='test-estimate-id')
                    .col-lg-12.text-center
                        button.btn.btn-xl(onClick='submitQuote()') Request Quote
    // jQuery
    script(src='/js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='/js/bootstrap.min.js')
    // Plugin JavaScript
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
    script(src='/js/classie.js')
    script(src='/js/cbpAnimatedHeader.js')
    // Contact Form JavaScript
    script(src='/js/jqBootstrapValidation.js')
    script(src='/js/contact_me.js')
    // Custom Theme JavaScript
    script(src='/js/agency.js')
    // Custom Yippee JavaScript
    script(src='/js/custom.js')