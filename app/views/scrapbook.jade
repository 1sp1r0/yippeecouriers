extends scrapbook-layout



block content
    
    // Timeline - How it Works
    section#main
      .container
        
        .row
          .col-lg-12.text-center
            h2.section-heading #{trip._pets[0].name}
            h3.section-subheading.text-muted #{trip.pickup_address.city} - #{trip.dropoff_address.city} - #{trip.trip_date}
        .row
          .col-lg-12
            ul.timeline
              each message, index in messages
                
                   
                    if (index % 2 == 1)
                        
                        li.timeline-inverted
                            .timeline-image
                                img.img-circle.img-responsive(src='#{message.file}', style="width:156px; height:156px; overflow:hidden; float:center; vertical-align:bottom; margin: 0 auto;", alt='')
                        
                            .timeline-panel
                                .timeline-heading
                                    h4 #{message.title} - #{message.timestamp}
                                .timeline-body
                                  p.text-muted
                                    | #{message.text}
                    else
                        li
                            .timeline-image
                                img.img-circle.img-responsive(src='#{message.file}', style="width:156px; height:156px; overflow:hidden; float:center; vertical-align:bottom; margin: 0 auto;", alt='')
                            .timeline-panel
                                .timeline-heading
                                    h4 #{message.title} - #{message.timestamp}
                                .timeline-body
                                    p.text-muted
                                        | #{message.text}
              
              li.timeline-inverted
                .timeline-image
                  h4
                    | Book
                    br
                    | Your Next 
                    br
                    | Trip!

    
    // Contact Section
    section#contact
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Contact Us
            h3.section-subheading.text-muted Have other questions? Drop us a line!
        .row
          .col-lg-12
            form#contactForm(name='sentMessage', novalidate='')
              .row
                .col-md-6
                  .form-group
                    input#name.form-control(type='text', placeholder='Your Name *', required='', data-validation-required-message='Please enter your name.')
                    p.help-block.text-danger
                  .form-group
                    input#email.form-control(type='email', placeholder='Your Email *', required='', data-validation-required-message='Please enter your email address.')
                    p.help-block.text-danger
                  .form-group
                    input#phone.form-control(type='tel', placeholder='Your Phone *', required='', data-validation-required-message='Please enter your phone number.')
                    p.help-block.text-danger
                .col-md-6
                  .form-group
                    textarea#message.form-control(placeholder='Your Message *', required='', data-validation-required-message='Please enter a message.')
                    p.help-block.text-danger
                .clearfix
                .col-lg-12.text-center
                  #success
                  button.btn.btn-xl(type='submit') Send Message
    footer
      .container
        .row
          .col-md-4
            span.copyright Copyright Â© Yippee Air 2016
          .col-md-4
            ul.list-inline.social-buttons
              li
                a(href='#')
                  i.fa.fa-twitter
              li
                a(href='#')
                  i.fa.fa-facebook
              li
                a(href='#')
                  i.fa.fa-linkedin
          .col-md-4
            ul.list-inline.quicklinks
              li
                a(href='#') Privacy Policy
              li
                a(href='#') Terms of Use

    
