extends scrapbook-layout


block content
    
    // Timeline - How it Works
    section#main
      .container
        
        .row
          .col-lg-12.text-center
            h2.section-heading #{trip._pets[0].name}
            h3.section-subheading.text-muted #{trip.pickup_address.city} - #{trip.dropoff_address.city} - #{date_formatted}
        .row
          .col-lg-12
            ul.timeline
              each message, index in messages
                
                   
                    if (index % 2 == 1)
                        
                        li.timeline-inverted
                            .timeline-image
                                img.img-circle.img-responsive(src='#{message.file}', style="width:156px; height:156px; overflow:hidden; float:center; vertical-align:bottom; margin: 0 auto;", alt='')
                        
                            .timeline-panel
                                .timeline-heading
                                    h4 #{message.title} - #{message.time}
                                .timeline-body
                                  p.text-muted
                                    | #{message.text}
                    else
                        li
                            .timeline-image
                                img.img-circle.img-responsive(src='#{message.file}', style="width:156px; height:156px; overflow:hidden; float:center; vertical-align:bottom; margin: 0 auto;", alt='')
                            .timeline-panel
                                .timeline-heading
                                    h4 #{message.title} - #{message.time}
                                .timeline-body
                                    p.text-muted
                                        | #{message.text}
              
              li.timeline-inverted
                .timeline-image
                  h4
                    | Book
                    br
                    | Your Next 
                    br
                    | Trip!

    
    // Contact Section
    section#contact-yippee.bg-light-gray
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading Contact Us
            h3.section-subheading.text-muted
                span Have other questions? Drop us a line! 
                a(href='mailto:fly@yippeeair.com') fly@yippeeair.com
            h2
                a.portfolio-link(href='mailto:fly@yippeeair.com', data-toggle='modal')
                    button.btn.btn-xl Email Yippee
    footer
      .container
        .row
          .col-md-4
            span.copyright Copyright Â© Yippee Air 2016
          .col-md-4
            ul.list-inline.social-buttons
              li
                a(href='#')
                  i.fa.fa-twitter
              li
                a(href='#')
                  i.fa.fa-facebook
              li
                a(href='#')
                  i.fa.fa-linkedin
          .col-md-4
            ul.list-inline.quicklinks
              li
                a(href='#') Privacy Policy
              li
                a(href='#') Terms of Use

    
